<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spreadsheet</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="menu">
        <div class="file-options">File</div>
        <div class="formattings">Format</div>
        <div class="alignment">Align</div>
    </div>

    <div class="formula-bar">
        <input type="text" placeholder="Enter address">
        <input type="text">
    </div>

    <div class="main">
        <div class="top-left-box">top-left</div>
        <div class="top-row">
            <%for(let j=0;j < 26; j++){%>
                <div class="cell">
                    <%=String.fromCharCode(65+j)%>
                </div>
            <%}%>
        </div>
        <div class="top-left-col">
            <%for(let i=0;i < 100; i++){%>
                <div class = "cell">
                    <%=i+1%>
                </div>
            <%}%>

        </div>
        <div class="grid">
            <%for(let i=0; i < 100 ;i++){%>
                <div class="row">
                    <%for(let j=0; j < 26 ;j++){%>
                        <div class="cell" contenteditable = "true" rid=<%=i%> cid=<%=j%>></div>
                    <%}%>
                </div>
            <%}%>               
        </div>
    </div>
    <script src="render.js"></script>

